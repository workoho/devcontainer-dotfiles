// Oh My Posh Theme based on - partly inspired by https://github.com/devcontainers/features/blob/main/src/common-utils/scripts/devcontainers.zsh-theme
{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{ .Path }}",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "blue",
          "style": "plain",
          "template": "{{ .Name }}",
          "properties": {
            "mapped_shell_names": {
              "bash": "Bash",
              "pwsh": "PowerShell",
              "zsh": "Zsh"
            }
          },
          "type": "shell"
        },
        {
          "foreground": "white",
          "properties": {
            "time_format": "15:04:05"
          },
          "style": "plain",
          "template": " | <green>{{ .CurrentDate | date .Format }}</>",
          "type": "time"
        }
      ],
      "type": "rprompt"
    },
    {
      "alignment": "left",
      "newline": false,
      "segments": [
        {
          "type": "project",
          "style": "plain",
          "foreground": "darkGray",
          "template": "{{ if .Error }} <red><b></b></> <lightRed>{{ .Error }}</>{{ else }} <lightYellow><b></b></>{{ if .Version }} {{.Version}}{{ end }}{{ if .Name }} <b>{{ .Name }}</b>{{ end }}{{ end }}\n"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": false,
      "segments": [
        {
          "type": "root",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": "",
          "foreground": "black",
          "background": "lightRed",
          "template": "<f></f> root"
        },
        {
          "foreground": "green",
          "style": "plain",
          "template": "{{ if not .Root }}{{ if .Env.GITHUB_USER }}@{{ .Env.GITHUB_USER }}{{ else if .UserName }}{{ .UserName }}{{ end }}{{ end }} ",
          "type": "session"
        },
        {
          "style": "plain",
          "template": "{{ if .Root }} {{ end }}{{ if gt .Code 0 }}<red><b>➜ </b>{{ else }}<black>➜ {{ end }}</>",
          "type": "session"
        },
        {
          "foreground": "blue",
          "style": "plain",
          "properties": {
            "style": "mixed",
            "mixed_threshold": 4
          },
          "template": "<b>{{ .Path }}</b>",
          "type": "path"
        },
        {
          "properties": {
            "branch_icon": "",
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_worktree_count": true
          },
          "style": "plain",
          "template": "{{ if .HEAD }} <cyan>(<b><red>{{ .HEAD }}</></b>)</>{{ end }}",
          "type": "git"
        },
        {
          "foreground": "white",
          "style": "plain",
          "template": " ❯ ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "tooltips": [
    {
      "type": "git",
      "tips": [
        "git"
      ],
      "style": "diamond",
      "foreground": "black",
      "background": "lightYellow",
      "leading_diamond": "",
      "trailing_diamond": "",
      "template": "{{ .HEAD }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}",
      "properties": {
        "fetch_status": true,
        "fetch_upstream_icon": true
      }
    },
    {
      "type": "aws",
      "tips": [
        "aws"
      ],
      "style": "plain",
      "foreground": "#FFA400",
      "template": " {{.Profile}}{{if .Region}}@{{.Region}}{{end}}"
    },
    {
      "type": "az",
      "tips": [
        "az",
        "terraform"
      ],
      "style": "plain",
      "foreground": "lightCyan",
      "template": " {{ .Name }}"
    },
    {
      "type": "azd",
      "tips": [
        "azd"
      ],
      "style": "plain",
      "foreground": "lightCyan",
      "template": " {{ .DefaultEnvironment }}"
    },
    {
      "type": "azfunc",
      "tips": [
        "func"
      ],
      "properties": {
        "fetch_version": true,
        "display_mode": "files"
      },
      "style": "plain",
      "foreground": "#FEAC19",
      "template": " {{ .Full }}"
    }
  ],
  "valid_line": {
    "foreground": "lightGreen",
    "template": "<b>\uf42e</b> "
  },
  "error_line": {
      "foreground": "lightRed",
      "template": "<b>\ue009</b> "
  },
 "version": 2
}