{
  "name": "ðŸš§ devcontainer-dotfiles",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VARIANT": "ubuntu",
      // set devcontainer-cli arg for Dockerfile
      "devcontainercli": "true"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": false,
      "installOhMyZsh": true,
      "installOhMyZshConfig": false,
      "upgradePackages": true,
      "username": "vscode",
      "userUid": "automatic",
      "userGid": "automatic"
    },
    "ghcr.io/jpawlowski/devcontainer-features/powershell-extended:2": {
      "setUserDefaultShell": true
    }
  },
  "postCreateCommand": "./install.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "editorconfig.editorconfig",
        "github.vscode-github-actions",
        "lizebang.bash-extension-pack",
        "DavidAnson.vscode-markdownlint",
        "ms-vscode-remote.remote-containers",
        "yzhang.markdown-all-in-one"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "pwsh",
        "terminal.integrated.fontFamily": "'Cascadia Code', Menlo, Monaco, Consolas, 'Courier New', monospace",
        "terminal.integrated.fontSize": 13
      }
    }
  },
  "remoteUser": "vscode",
  "containerEnv": {
		"POSH_THEME_NAME": "powerlevel10k_modern"
	}
}